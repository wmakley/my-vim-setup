call pathogen#infect()
call pathogen#helptags()

" font & color scheme
colorscheme herald
set guifont=Monospace\ 9

set nocompatible
" tabs
set expandtab
set softtabstop=2
set tabstop=4
set shiftwidth=2
set smarttab
set autoindent
set smartindent
set backspace=indent,eol,start

set showmatch
set guioptions-=T
set ruler
set nohls
set incsearch
set hlsearch
set ignorecase
set smartcase
set hidden
"set virtualedit=all
set wildmenu
set linebreak

"xml plugin
let xml_use_xhtml = 1

filetype plugin on
filetype indent on
set autoread
autocmd! bufwritepost vimrc source ~/.vim_runtime/vimrc
" Turn backup off, since most stuff is in SVN, git anyway...
set nobackup
set nowb
set noswapfile

"fuzzy finder
"map <C-t> :FufFile<Enter>

"command-t
let mapleader=","
cnoremap %% <C-R>=expand('%:h').'/'<cr>
map <leader>f :CommandT<cr>
map <leader>F :CommandT %%<cr>
set wildignore+=public/product_image/**,public/product/**,public/slide/**,public/callout/**,import/product/**,import/product_image/**,*images/**,*.git/**,*.svn/**

